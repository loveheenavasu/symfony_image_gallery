<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@yaireo/tagify@3.1.0/dist/tagify.css" />
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify@3.1.0/dist/tagify.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
    <title>My Gallery</title>
    <style>
      .img-thumbnail{
        height: 200px;
        width: 250px;
      }
      .gallery .card {
        border: none;
      }
      .logout-button{
        float: right;
      }
    </style>
  </head>
  <body>
    <div class="container">
      {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"><button class="btn btn-success logout-button">Logout</button></a>
        </div>
      {% endif %}
      <h2 >My Gallery</h2>
      <form action="{{ path('gallery') }}" method="GET">
        <div class="row">
            <div class="col-4">
              <a href="/gallery" class="btn btn-primary" type="submit">Back to gallery</a>
            </div>
        </div>

        <br/>
      </form>
      <div class="gallery row row-cols-5">
        {% for item in product %}
       <div class="card col">
          <img src="/uploads/{{ item.image }}" class="card-img-top" alt="" height="200" width="200">
          <div class="card-body">
            <h5 class="card-title">{{ item.name }}</h5>
            <p class="card-text">
              Provider: {{ item.provider }}
              <br/>
              Tags: {{ item.tag }}
            </p>
          </div>
        </div>

      {% endfor %}
      </div>
        
       
  </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>